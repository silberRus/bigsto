	ПараметрыСинхронизации.Вставить("ТекущаяСессия", ПараметрыСеанса.СессииОбменСБанками.Получить(НастройкаОбмена));
	ПараметрыСинхронизации.Вставить("НастройкаОбмена", НастройкаОбмена);
