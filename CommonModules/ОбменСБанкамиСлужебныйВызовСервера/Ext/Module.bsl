		ОбменСБанкамиСлужебный.ЗаполнитьСвойствоXDTO(Request, "sender", ПредставлениеОтправителя, Истина, ТекстОшибки);
		ОбменСБанкамиСлужебный.ЗаполнитьСвойствоXDTO(Request, "receiver", "SBBOL_DBO", Истина, ТекстОшибки);
		
