	Запрос.УстановитьПараметр("СертификатЭП", Сертификат);
	
	Выборка = Запрос.Выполнить().Выбрать();
	
	Если Выборка.Следующий() Тогда
		ИмяВнешнегоМодуля = Выборка.ИмяВнешнегоМодуля;
		Возврат Выборка.Ссылка;
