
Процедура ДобавитьВОтветЗаголовок(Имя, Константа, Ответ)
	
	Значение = Константы[Константа].Получить();
	Если Не ПустаяСтрока(Значение) Тогда
		Ответ.Заголовки.Вставить(Имя, Значение);
	КонецЕсли;
	
КонецПроцедуры

Функция Ответ() Экспорт
	
	Ответ = Новый HTTPСервисОтвет(200);
	
	ДобавитьВОтветЗаголовок("Access-Control-Allow-Origin", 		"АТ_AccessControlAllowOrigin", 		Ответ);
	ДобавитьВОтветЗаголовок("Access-Control-Allow-Methods", 	"АТ_AccessControlAllowMethods", 	Ответ);
	ДобавитьВОтветЗаголовок("Access-Control-Allow-Credentials", "АТ_AccessControlAllowCredentials", Ответ);
	ДобавитьВОтветЗаголовок("Access-Control-Allow-Headers", 	"АТ_AccessControlAllowHeaders", 	Ответ);
	ДобавитьВОтветЗаголовок("Access-Control-Allow-Max-Age", 	"АТ_AccessControlAllowMaxAge", 		Ответ);
	
	Возврат Ответ;
	
КонецФункции

