	Запрос = Новый Запрос;
	Запрос.МенеджерВременныхТаблиц = МенеджерВременныхТаблиц;
	Запрос.Параметры.Вставить("КонвертацияОКП", Справочники.КлассификаторОКПД2.ТаблицаКонвертацииОКП_ОКПД2());
