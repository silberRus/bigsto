	ТаблицаОбъектов = Новый ТаблицаЗначений();
	ТаблицаОбъектов.Колонки.Добавить("ИмяОбъекта");
	ТаблицаОбъектов.Колонки.Добавить("Представление");
		
	// Заказ клиента
	НоваяСтрока = ТаблицаОбъектов.Добавить();
	НоваяСтрока.ИмяОбъекта = Метаданные.Документы.ЗаказКлиента.ПолноеИмя();
	НоваяСтрока.Представление = Метаданные.Документы.ЗаказКлиента.Представление();
	
	// Реализация товаров и услуг
	НоваяСтрока = ТаблицаОбъектов.Добавить();
	НоваяСтрока.ИмяОбъекта = Метаданные.Документы.РеализацияТоваровУслуг.ПолноеИмя();
	НоваяСтрока.Представление = Метаданные.Документы.РеализацияТоваровУслуг.Представление();
	
	// Заказ поставщику
	НоваяСтрока = ТаблицаОбъектов.Добавить();
	НоваяСтрока.ИмяОбъекта = Метаданные.Документы.ЗаказПоставщику.ПолноеИмя();
	НоваяСтрока.Представление = Метаданные.Документы.ЗаказПоставщику.Представление();
	
	// Перемещение товаров
	НоваяСтрока = ТаблицаОбъектов.Добавить();
	НоваяСтрока.ИмяОбъекта = Метаданные.Документы.ПеремещениеТоваров.ПолноеИмя();
	НоваяСтрока.Представление = Метаданные.Документы.ПеремещениеТоваров.Представление();	
	
	Возврат ТаблицаОбъектов;
	
КонецФункции	

