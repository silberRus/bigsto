Процедура ДобавитьЭлементыПоКоличествомМест()
	
	// Добавляет элементы управления по функционалу количесвтву мест
	
	Группа = Элементы.Найти("АТ_ГруппаМест");
	Если Группа = Неопределено Тогда
		ВызватьИсключение "Не найдена группа для управления количеством мест. Добавте на форму группу ""АТ_ГруппаМест"".";
	КонецЕсли;
	
	Реквизиты = Новый Массив;
	Реквизиты.Добавить(Новый РеквизитФормы("АТМест_Инфо", Новый ОписаниеТипов("ФорматированнаяСтрока")));
	ИзменитьРеквизиты(Реквизиты);
	
	ЭлКолМест = Элементы.Добавить("АТМест_КолМест", Тип("ПолеФормы"), Группа);
	ЭлКолМест.Вид 						= ВидПоляФормы.ПолеВвода;
	ЭлКолМест.Заголовок 				= "Мест";
	ЭлКолМест.ПутьКДанным 				= "Объект.АТ_КоличествоМест";
	ЭлКолМест.АвтоОтметкаНезаполненного = Истина;
	ЭлКолМест.КнопкаРегулирования 		= Истина;
	ЭлКолМест.КнопкаОчистки		 		= Истина;
	ЭлКолМест.УстановитьДействие("ПриИзменении", "ПриИзмененииКоличествоМест");
	
	НоваяКоманда = Команды.Добавить("АТМест_Добавить");
	НоваяКоманда.Действие		= "АТМест_Добавить";
    НоваяКоманда.Подсказка		= "Выбрать, если места находятся в другом расходном ордере.";
	НоваяКоманда.Картинка		= БиблиотекаКартинок.ДобавитьЭлементСписка;
	НоваяКоманда.Отображение 	= ОтображениеКнопки.Картинка;
	КнопкаДоб = Элементы.Добавить("АТМест_Добавить", Тип("КнопкаФормы"), Группа);
	КнопкаДоб.Заголовок 	= "";
	КнопкаДоб.ИмяКоманды 	= "АТМест_Добавить";
	КнопкаДоб.Вид 			= ВидКнопкиФормы.Гиперссылка;
	
	ЭлДрРасходник = Элементы.Добавить("АТМест_ИнфоПоРасходнику", Тип("ПолеФормы"), Группа);
	ЭлДрРасходник.ПутьКДанным = "АТМест_Инфо";
	ЭлДрРасходник.ПоложениеЗаголовка = ПоложениеЗаголовкаЭлементаФормы.Нет;
	ЭлДрРасходник.УстановитьДействие("ОбработкаНавигационнойСсылки", "ОбработатьКолМестНажатие");
	
	ОбновитьВидимостьМестДоставки();
	
КонецПроцедуры

&НаСервере
Процедура ОбновитьВидимостьМестДоставки()
	
	Если Объект.АТ_МестаВДругомОрдере.Пустая() Тогда
		
		Элементы.АТМест_Добавить.Видимость 	= Не Объект.АТ_КоличествоМест;
		Элементы.АТМест_КолМест.Видимость 	= Истина;
		
		ЭтаФорма.АТМест_Инфо = Новый ФорматированнаяСтрока("");
		
	Иначе
		
		Элементы.АТМест_Добавить.Видимость 	= Ложь;
		Элементы.АТМест_КолМест.Видимость 	= Ложь;
		
		ФормСтроки = Новый Массив;
		ФормСтроки.Добавить(Новый ФорматированнаяСтрока("Места в расходнике "));
		ФормСтроки.Добавить(Новый ФорматированнаяСтрока("№" + Объект.АТ_МестаВДругомОрдере.Номер,,,,ПолучитьНавигационнуюСсылку(Объект.АТ_МестаВДругомОрдере)));
		ФормСтроки.Добавить(Новый ФорматированнаяСтрока(" "));
		ФормСтроки.Добавить(Новый ФорматированнаяСтрока(БиблиотекаКартинок.Удалить,,,,"УдалитьРасходник"));
		
		ЭтаФорма.АТМест_Инфо = Новый ФорматированнаяСтрока(ФормСтроки);
		
	КонецЕсли;
	
КонецПроцедуры

