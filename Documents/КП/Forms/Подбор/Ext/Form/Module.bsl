		стр.Добавить(СтрШаблон("ВЫБРАТЬ &Склад%1, %1", Формат(Ном, "ЧГ=")));
	КонецЦикла;
	
	ЗаменитьТекстВставку(СписокТоваров.ТекстЗапроса, ?(Ном, " ОБЪЕДИНИТЬ ВСЕ ", "") + СтрСоединить(стр, " ОБЪЕДИНИТЬ ВСЕ "), "// Начало замены", "// Конец замены");
	
