// Заполняет в текущей строке служебные поля ИспользоватьАдресноеХранение и ИспользоватьСкладскиеПомещения
//
// Параметры:
//  ТекущаяСтрока	 - Число - индекс текущей строки
//
&НаСервере
Процедура ЗаполнитьСлужебныеРеквизитыТЧ(ТекущаяСтрока = Неопределено)
	
	Запрос = Новый Запрос;
	
	ТекстЗапроса =
	"ВЫБРАТЬ
	|	ТаблицаТоваров.НомерСтроки,
	|	ТаблицаТоваров.Склад КАК Склад,
	|	ТаблицаТоваров.Помещение КАК Помещение
	|ПОМЕСТИТЬ ТаблицаТоваров
	|ИЗ
	|	&ТаблицаТоваров КАК ТаблицаТоваров";
	
	ТекстЗапроса = ТекстЗапроса 
		+ ТекстРазделителяЗапросов()
		+ Документы.КорректировкаНазначенияТоваров.ТекстЗапросаИспользованиеПомещенийИАдресногоХранения();
	
	Если ТекущаяСтрока = Неопределено Тогда
		ТаблицаТовары = Объект.Товары.Выгрузить(,"НомерСтроки, Склад, Помещение");
	Иначе
		ТекущиеДанные = Объект.Товары.НайтиПоИдентификатору(ТекущаяСтрока);
		МассивСтрок = ОбщегоНазначенияКлиентСервер.ЗначениеВМассиве(ТекущиеДанные);
		ТаблицаТовары = Объект.Товары.Выгрузить(МассивСтрок, "НомерСтроки, Склад, Помещение");
	КонецЕсли;
	
	Запрос.Текст = ТекстЗапроса;
	Запрос.УстановитьПараметр("Период", Объект.Дата);
	Запрос.УстановитьПараметр("ТаблицаТоваров", ТаблицаТовары);
	Выборка = Запрос.Выполнить().Выбрать();
	
	Пока Выборка.Следующий() Цикл 
		Строка = Объект.Товары[Выборка.НомерСтроки - 1];
		ЗаполнитьЗначенияСвойств(Строка, Выборка, "ИспользоватьАдресноеХранение, ИспользоватьСкладскиеПомещения");
	КонецЦикла;
	
