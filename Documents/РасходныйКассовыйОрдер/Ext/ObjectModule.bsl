		|ГДЕ
		|	ДанныеДокумента.Ссылка = &Ссылка
		|");
		Запрос.УстановитьПараметр("Ссылка", Ссылка);
	
		Выборка = Запрос.Выполнить().Выбрать();
		Если Выборка.Следующий() Тогда
			
			КассоваяКнигаПолучателя = Неопределено;
			Если ТипЗнч(КассаПолучатель) = Тип("СправочникСсылка.Кассы") Тогда
				КассоваяКнигаПолучателя = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(КассаПолучатель, "КассоваяКнига");
			КонецЕсли;
			
			ВнутреннееПеремещение =
				(ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.ВыдачаДенежныхСредствВДругуюКассу
				И ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Касса, "КассоваяКнига") = КассоваяКнигаПолучателя);
			
			Если Выборка.ВнутреннееПеремещение <> ВнутреннееПеремещение Тогда
				Номер = "";
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
