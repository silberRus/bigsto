	ДелоРодитель.Идентификатор  = "ЗаказыКлиентов";
	ДелоРодитель.Представление  = НСтр("ru = 'Заказы клиентов'");
	ДелоРодитель.Владелец       = Метаданные.Подсистемы.Продажи;
	
